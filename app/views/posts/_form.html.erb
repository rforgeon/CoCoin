<%= form_for [place, post] do |f| %>
  <% if post.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(post.errors.count, "error") %>.</h4>
        <ul>
          <% post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <%= form_group_tag(post.errors[:title]) do %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
  <%end%>
  <%= form_group_tag(post.errors[:image]) do %>
    <%= f.label :image %>
    <%= f.text_field :image, class: 'form-control', placeholder: "Enter link to your cover photo" %>
  <%end%>
  <%= form_group_tag(post.errors[:link]) do %>
    <%= f.label :link %>
    <%= f.text_field :link, class: 'form-control', placeholder: "Enter link to your proposal" %>
  <%end%>
  <%= form_group_tag(post.errors[:body]) do %>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post description" %>
  <%end%>
  <%= form_group_tag(post.errors[:expense]) do %>
    <%= f.label :expense %>
    <%= f.number_field :expense, class: 'form-control', placeholder: "Enter total expense" %>
  <%end%>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-primary' %>
  </div>
<% end %>
