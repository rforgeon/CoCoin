<h1>My Groups</h1>

 <div class="row">
   <div class="col-md-8">
     <% @my_places.each do |topic| %>
       <div class="media">
         <%= link_to image_tag(topic.link, width: '75%'),topic %>
         <div class="media-body">
           <br>

           <h4 class="media-heading">
             <%= link_to topic.name, topic %>
           </h4>
           <small>
             <%= topic.description %>
           </small>
         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-4">
     <br>

     <%if current_user%>
        <%= link_to "New Group", new_place_path, class: 'btn btn-primary' %>
     <%end%>

     <br>
     <br>

   </div>
 </div>
