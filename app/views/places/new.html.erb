<h1>New Group</h1>

 <div class="row">
   <div class="col-md-4">
     <!-- <p>Guidelines for Groups:</p>
     <ul>
       <li>Make sure it is an accessable location.</li>
       <li>Never insult goats.</li>
       <li>Smile when you type.</li>
     </ul> -->
   </div>
   <div class="col-md-8">
     <%= form_for @place do |f| %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter group name" %>
       </div>
       <div class="form-group">
         <%= f.label :link %>
         <%= f.text_field :link, class: 'form-control', placeholder: "Enter group image URL" %>
       </div>
       <div class="form-group">
         <%= f.label :description %>
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter group description" %>
       </div>
       <div class="form-group">
         <%= f.label :contribution %>
         <%= f.number_field :contribution, class: 'form-control', placeholder: "Enter monthly contribution" %>
       </div>
       <%= f.submit "Save", class: 'btn btn-primary' %>
     <% end %>
   </div>
 </div>
